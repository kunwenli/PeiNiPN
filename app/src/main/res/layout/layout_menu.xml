<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="200dp"
              android:layout_height="match_parent"
              android:background="#4f4f4f"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/icon_buju"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/menu_imagehead"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/ic_nan"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"/>
        <!--android:text="陪你PN"-->
        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/backgroundf1f1f1"
            android:textSize="@dimen/textSize16"/>
        <!--android:text="点击查看/编辑"-->
        <TextView
            android:id="@+id/signWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#dedfdf"
            android:textSize="@dimen/textSize12"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/home_homefragmen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/one"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/home_lift"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/one"
                android:paddingLeft="25dp"
                android:text="首页"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize16"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_squarefragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/two"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/home_left2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/two"
                android:text="广场"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize16"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_sellerfragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/three"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/merchant"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/three"
                android:text="商家"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize16"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_fragment_ranking"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/four"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ranking"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/four"
                android:text="排行榜"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize16"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myWealth"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/wealth"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ranking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/wealth"
                android:text="财富"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize16"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_fragment_manage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/five"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/shop"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/five"
                android:text="店铺管理"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize16"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/six"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/six"
            android:text="设置"
            android:textColor="@color/white000"
            android:textSize="@dimen/textSize16"/>
    </RelativeLayout>
</LinearLayout>