<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white000"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/backgroundf1f1f1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:text="订单号:1000000"
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize16"/>

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:text="2017-10-10 18:54"
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/imgSrc"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/bj"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="上岛咖啡(天安门店)"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/orderType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="到店买单"
                android:textColor="#ffab9c"
                android:textSize="@dimen/textSize14"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/orderStatus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/ic_checked"/>

        <TextView
            android:id="@+id/orderStatus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/RED_FB4E30"
            android:textSize="@dimen/textSize16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/payType"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"
            android:background="@mipmap/weixin"/>

        <TextView
            android:id="@+id/payType_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝消费"
            android:textColor="@color/text333"
            android:textSize="@dimen/textSize16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/totalPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥50.00"
                android:textColor="@color/text999"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 折后:"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="¥40.00"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>
</LinearLayout>