<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <com.jsz.peini.ui.view.RoundAngleImageView
            android:id="@+id/imgSrc"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vp"
            app:roundHeight="3dp"
            app:roundWidth="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="消息"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/type"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/fen"/>

                <TextView
                    android:id="@+id/valNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="-400积分"
                    android:textColor="@color/RED_FB4E30"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/createTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="2017-01-21"
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize12"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shape_string"/>
</LinearLayout>
