<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white0000"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/point_grade"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/crown1"/>


    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/point_icronin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@mipmap/ic_nan"
            app:civ_border_color="@color/yi"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/point_number"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:background="@drawable/peini_yuan"
            android:gravity="center"
            android:maxLength="2"
            android:text="5"
            android:textColor="@color/white000"
            android:textSize="@dimen/textSize12"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/point_sports"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="bottom|center"
        android:background="@mipmap/sports"/>

</LinearLayout>