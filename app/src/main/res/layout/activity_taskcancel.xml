<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:myradio="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <RadioGroup
        android:id="@+id/task_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white000">

        <com.jsz.peini.ui.view.pay.MyRadioButton
            android:id="@+id/task_radiobutton1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white000"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="双方协商取消"
            myradio:drawableBottom="@drawable/pay_seller"
            myradio:drawableSize="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/view"/>

        <com.jsz.peini.ui.view.pay.MyRadioButton
            android:id="@+id/task_radiobutton2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white000"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="个人原因取消"
            myradio:drawableBottom="@drawable/pay_seller"
            myradio:drawableSize="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/view"/>
    </RadioGroup>
</LinearLayout>