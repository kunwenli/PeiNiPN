<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white000"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundf1f1f1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:text="基本条件"
                android:textColor="#999"
                android:textSize="@dimen/textSize16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="约会城市"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <LinearLayout
                    android:id="@+id/task_regist_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/task_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="河北石家庄"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="1dp"
                        android:background="@mipmap/backselect"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>


            <LinearLayout
                android:id="@+id/task_rendezvous"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="约会地点"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/task_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="美食"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <TextView
                        android:id="@+id/task_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="金钱豹(西单店)"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="1dp"
                        android:background="@mipmap/backselect"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>


            <LinearLayout
                android:id="@+id/task_regist_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="约会时间"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="不限"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="1dp"
                        android:background="@mipmap/backselect"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/backgroundf1f1f1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:text="详细描述"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/task_describe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请输入详细的描述信息,最多200字"
                        android:maxLength="200"
                        android:paddingLeft="15dp"
                        android:textColorHint="#d8d8d8"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/textSize16"/>

                    <TextView
                        android:id="@+id/task_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="0/200"
                        android:textColor="#d8d8d8"
                        android:textSize="@dimen/textSize16"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="bottom"
                android:paddingBottom="8dp"
                android:text="你希望Ta:"
                android:textColor="#999"
                android:textSize="@dimen/textSize16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="性别"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <RadioGroup
                    android:id="@+id/task_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/task_sex_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="40dp"
                        android:button="@drawable/checkbox_style_seller"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="不限"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_sex_man"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:button="@drawable/checkbox_style_seller"
                        android:paddingLeft="5dp"
                        android:text="男"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_sex_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:button="@drawable/checkbox_style_seller"
                        android:paddingLeft="5dp"
                        android:text="女"
                        android:textSize="@dimen/textSize16"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="年龄"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <LinearLayout
                    android:id="@+id/task_regist_age"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/task_age"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="不限"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="1dp"
                        android:background="@mipmap/backselect"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="买单"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <RadioGroup
                    android:id="@+id/task_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/task_pay_mi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:button="@drawable/checkbox_style_seller"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="我买单"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_pay_you"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:button="@drawable/checkbox_style_seller"
                        android:paddingLeft="5dp"
                        android:text="Ta买单"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_pay_aa"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:button="@drawable/checkbox_style_seller"
                        android:paddingLeft="5dp"
                        android:text="AA制"
                        android:textSize="@dimen/textSize16"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="出行"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <RadioGroup
                    android:id="@+id/task_goout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/task_goout_mi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:button="@drawable/checkbox_style_seller"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="我接Ta"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_goout_you"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:button="@drawable/checkbox_style_seller"
                        android:paddingLeft="5dp"
                        android:text="Ta接我"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_goout_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:button="@drawable/checkbox_style_seller"
                        android:paddingLeft="5dp"
                        android:text="自由行"
                        android:textSize="@dimen/textSize16"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>